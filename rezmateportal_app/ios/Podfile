platform :ios, '14.0'

# Environment Configuration
ENV['COCOAPODS_DISABLE_STATS'] = 'true'
ENV['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
ENV['SWIFT_VERSION'] = '5.0'

# Project Configuration
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Flutter Root
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    is_privacy_target = target.name.match?(/privacy$/i)

    if false && is_privacy_target
      puts "[Podfile] Applying privacy target fix: #{target.name}"
      phases_to_remove = []
      target.build_phases.each do |phase|
        if phase.is_a?(Xcodeproj::Project::Object::PBXSourcesBuildPhase) ||
            phase.is_a?(Xcodeproj::Project::Object::PBXFrameworksBuildPhase)
          phases_to_remove << phase
        elsif phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase)
          phases_to_remove << phase
        elsif phase.is_a?(Xcodeproj::Project::Object::PBXCopyFilesBuildPhase) &&
            (phase.name == 'CopySwiftLibs' || phase.dst_subfolder_spec == 11)
          phases_to_remove << phase
        end
      end
      phases_to_remove.each { |phase| target.build_phases.delete(phase) }

      target.build_configurations.each do |config|
        config.build_settings['PRODUCT_TYPE'] = 'com.apple.product-type.bundle'
        config.build_settings['SKIP_INSTALL'] = 'YES'
        config.build_settings['WRAPPER_EXTENSION'] = 'bundle'
        config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'NO'
        config.build_settings['EMBEDDED_CONTENT_CONTAINS_SWIFT'] = 'NO'
        config.build_settings['DEFINES_MODULE'] = 'NO'
        config.build_settings['EXECUTABLE_NAME'] = ''
        config.build_settings['MACH_O_TYPE'] = 'none'
        config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        config.build_settings['CODE_SIGN_IDENTITY'] = ''

        config.build_settings.delete('LD_RUNPATH_SEARCH_PATHS')
        config.build_settings.delete('DYLIB_INSTALL_NAME_BASE')
        config.build_settings.delete('LIBRARY_SEARCH_PATHS')
        config.build_settings.delete('OTHER_LDFLAGS')
        config.build_settings.delete('SWIFT_VERSION')
        config.build_settings.delete('SWIFT_COMPILATION_MODE')
        config.build_settings.delete('SWIFT_ACTIVE_COMPILATION_CONDITIONS')
        config.build_settings.delete('SWIFT_INCLUDE_PATHS')
      end
    end
    
    target.build_configurations.each do |config|
      # Base Configuration
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      unless is_privacy_target
        # Swift Configuration - CRITICAL for fixing crashes
        config.build_settings.delete('SWIFT_VERSION')
        config.build_settings.delete('ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES')
        config.build_settings.delete('SWIFT_OPTIMIZATION_LEVEL')
        config.build_settings.delete('SWIFT_COMPILATION_MODE')
        config.build_settings.delete('SWIFT_WHOLE_MODULE_OPTIMIZATION')
      end
      
      unless is_privacy_target
        # Module Configuration
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['SWIFT_INSTALL_OBJC_HEADER'] = 'YES'
        config.build_settings['DEFINES_MODULE'] = 'YES'
        
        # Fix for Privacy Manifests (url_launcher issue)
        config.build_settings.delete('GENERATE_INFOPLIST_FILE')
        # CRITICAL: Set SKIP_INSTALL=YES for Pod targets to prevent "Generic Xcode Archive"
        # This ensures only the Runner app is included in the archive for IPA export
        # Reference: Apple TN3110, Flutter issue #66619
        config.build_settings['SKIP_INSTALL'] = 'YES'
        config.build_settings.delete('BUILD_LIBRARY_FOR_DISTRIBUTION')
        
        # Plugin-specific fixes
        if target.name == 'flutter_facebook_auth'
          config.build_settings['SWIFT_ACTIVE_COMPILATION_CONDITIONS'] = 'DEBUG'
          config.build_settings['OTHER_SWIFT_FLAGS'] = '$(inherited) -D DEBUG'
        end
        
        if target.name == 'google_sign_in_ios'
          config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
        end
        
        # Fix for url_launcher and sqflite privacy bundles
        if target.name.include?('url_launcher') || target.name.include?('sqflite')
          config.build_settings['PRODUCT_BUNDLE_IDENTIFIER'] = "org.cocoapods.#{target.name.gsub('_', '-')}"
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        end
        
        # Architecture exclusions for simulator
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
        
        # Additional stability settings
        defs = config.build_settings['GCC_PREPROCESSOR_DEFINITIONS']
        defs = ['$(inherited)'] if defs.nil?
        defs = defs.split(' ') if defs.is_a?(String)
        defs << 'COCOAPODS=1'
        defs << 'PERMISSION_CAMERA=1'
        defs << 'PERMISSION_PHOTOS=1'
        defs << 'PERMISSION_MICROPHONE=1'
        defs << 'PERMISSION_LOCATION=1'
        defs << 'PERMISSION_LOCATION_WHENINUSE=1'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = defs.uniq
        config.build_settings.delete('OTHER_LDFLAGS')
      end
    end
  end

  if false
    # Remove privacy bundle references that cause build failures
    installer.pods_project.targets.each do |target|
      target.build_phases.each do |phase|
        # Remove resource build phases for privacy bundles
        if phase.is_a?(Xcodeproj::Project::Object::PBXResourcesBuildPhase)
          phase.files.select do |file|
            if file.display_name && file.display_name.match?(/privacy\.bundle/i)
              phase.remove_build_file(file)
            end
          end
        end
        
        # Remove copy files build phases for privacy bundles
        if phase.is_a?(Xcodeproj::Project::Object::PBXCopyFilesBuildPhase)
          phase.files.select do |file|
            if file.display_name && file.display_name.match?(/privacy\.bundle/i)
              phase.remove_build_file(file)
            end
          end
        end
      end
    end
    
    # Fix permissions
    installer.pods_project.build_configurations.each do |config|
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
    end
    
    support_files_dir = File.join(__dir__, 'Pods', 'Target Support Files')
    if Dir.exist?(support_files_dir)
      Dir.glob(File.join(support_files_dir, '**', '*.xcfilelist')).each do |file|
        begin
          original = File.read(file)
          filtered = original.lines.reject do |line|
            line.include?('PrivacyInfo.xcprivacy') ||
              line.match?(/privacy\.bundle/i) ||
              line.match?(/_privacy/i)
          end.join
          if filtered != original
            File.write(file, filtered)
          end
        rescue StandardError
        end
      end
    end
    
    # Save changes
    installer.pods_project.save
  end
end